generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id String @id @default(cuid())
  slug String @unique
  name String
  images Image[]
}

model Image {
  id String @id @default(cuid())
  alt String
  url String

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  tenantId String
}
